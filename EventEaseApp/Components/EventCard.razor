@using System.ComponentModel.DataAnnotations


<EditForm Model="this" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <!-- Form Inputs -->
    <label>Event Name:</label>
    <input @bind="EventName" class="form-control" />
    <ValidationMessage For="@(() => EventName)" />

    <label>Event Date:</label>
    <input @bind="EventDate" type="date" class="form-control" />
    <ValidationMessage For="@(() => EventDate)" />

    <label>Event Location:</label>
    <input @bind="EventLocation" class="form-control" />
    <ValidationMessage For="@(() => EventLocation)" />

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Submit Event</button>
</EditForm>

@code {
    [Parameter]
    [Required(ErrorMessage = "Event Name is required.")]
    [StringLength(100, ErrorMessage = "Event Name must be less than 100 characters.")]
    public string EventName { get; set; } = "Sample Event";

    [Parameter]
    [Required(ErrorMessage = "Event Date is required.")]
    public DateTime EventDate { get; set; } = DateTime.Now;

    [Parameter]
    [Required(ErrorMessage = "Event Location is required.")]
    [StringLength(200, ErrorMessage = "Event Location must be less than 200 characters.")]
    public string EventLocation { get; set; } = "Sample Location";

    private void HandleValidSubmit()
    {
        Console.WriteLine("Form Submitted Successfully!");
    }
}

