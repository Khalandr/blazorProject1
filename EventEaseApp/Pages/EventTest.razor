@page "/eventtest"

<h3>Event Card Test</h3>

@foreach (var eventItem in Events)
{
    <div>
        <EventCard EventName="@eventItem.Name" EventDate="@eventItem.Date" EventLocation="@eventItem.Location" />
        <a href="/eventdetails">View Details</a>
    </div>
}

@code {
    private List<Event> Events = new()
    {
        new Event { Name = "Tech Conference 2025", Date = new DateTime(2025, 6, 15), Location = "New York City" },
        new Event { Name = "Music Festival", Date = new DateTime(2025, 7, 10), Location = "Los Angeles" },
        new Event { Name = "Art Expo", Date = new DateTime(2025, 8, 20), Location = "San Francisco" }
    };

    private class Event
    {
        public string Name { get; set; }
        public DateTime Date { get; set; }
        public string Location { get; set; }
    }
}
